# IRC Connection Configuration
# IRC server address in format host:port (e.g. "irc.libera.chat:6697")
IRC_ADDR=irc.libera.chat:6697

# Enable TLS connection (1=enabled, 0=disabled, default: 1)
IRC_TLS=1

# Skip TLS certificate verification (1=skip, 0=verify, default: 0)
# WARNING: Only use this for testing, never in production
IRC_TLS_INSECURE=0

# Optional IRC server password
IRC_PASS=

# Bot nickname (default: "goircbot")
IRC_NICK=hanna-test

# Bot username/ident (default: "goircbot")
IRC_USER=hanna-bot

# Bot real name/GECOS field (default: "Go IRC Bot")
IRC_NAME=Hanna IRC Bot

# SASL Authentication (optional)
# SASL PLAIN authentication username
SASL_USER=

# SASL PLAIN authentication password
SASL_PASS=

# Comma-separated list of channels to auto-join on connect
# Example: "#general,#bots,#dev"
AUTOJOIN=#general

# HTTP API Configuration
# HTTP server listen address (default: ":8080")
# Note: API_PORT is used in docker-compose for port mapping
API_PORT=8080

# Bearer token required for API authentication
# Generate a secure random token for production use
API_TOKEN=your-secure-api-token-here

# Enable HTTPS for API (1=enabled, 0=disabled, default: 0)
API_TLS=0

# Path to TLS certificate file (required when API_TLS=1)
API_CERT=

# Path to TLS private key file (required when API_TLS=1)  
API_KEY=

// Your trigger configuration in JSON format
TRIGGER_CONFIG='{"endpoints":{"n8n":{"url":"http://n8n:5678/webhook/1759ab31-e349-47ef-b01f-46ab0130b452/webhook","token":"secret123","events":["mention","privmsg"]}}}'

# N8N Integration
# n8n webhook URL for chat node integration
# Format: http://n8n-host:port/webhook/your-webhook-path
# Default in docker: http://n8n:5678/webhook/irc
N8N_WEBHOOK=http://n8n:5678/webhook/irc

# Flood Protection
# Comma-separated list of channels where flood protection is enabled
FLOOD_PROTECTED_CHANNELS=

# Maximum lines to send before using paste service (default: 3)
MAX_LINES_BEFORE_PASTING=3

# Curl template for paste service. {{filename}} will be replaced with the temporary file path
# Example: curl -s -F "file=@{{filename}}" https://ix.io
PASTE_CURL_TEMPLATE=

# Webhook Configuration
# Token used for n8n webhook authentication and trigger configuration
WEBHOOK_TOKEN=secret123

# N8N Owner Configuration
# Password for the default n8n owner account (admin@hanna-bot.local)
N8N_OWNER_PASSWORD=hanna123!

# Hanna Bot API Token for n8n integration
# This token allows n8n to authenticate with the Hanna Bot API
# Should match the API_TOKEN value for full integration
HANNA_BOT_API_TOKEN=your-secure-api-token-here

# HannaUI Configuration
# Port for the HannaUI web interface (default: 8081)
HANNAUI_PORT=8081

# n8n endpoint for HannaUI chat interface
# Format: http://host:port/webhook/endpoint-name
# For local development: http://localhost:5678/webhook/hanna-chat
# For production: https://your-domain.com/webhook/hanna-chat
# Leave empty for demo mode without real AI
HANNA_N8N_ENDPOINT=http://localhost:5678/webhook/hanna-chat

# HannaUI version identifier
HANNA_VERSION=1.3.0
